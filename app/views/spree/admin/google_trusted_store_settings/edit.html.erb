<% content_for :page_title do %>
  Google Trusted Store Settings
<% end %>

<div class='row'>
  <%= link_to 'Back', spree.edit_admin_general_settings_path, class: 'button' %>
  <%= link_to 'Google Shopping', spree.admin_google_shopping_settings_edit_path, class: 'button' %>
</div>

<div class='row'>
  <h2>Google Trusted Store shipment feed path: </h2>
  <%= text_field_tag 'shipment_feed_path', spree.google_trusted_store_shipment_feed_url + '.txt', readonly: true, style: 'width: 70%;' %>
</div>

<div class='row'>
  <h2>Google Trusted Store cancellation feed path: </h2>
  <%= text_field_tag 'cancellation_feed_path', spree.google_trusted_store_cancellation_feed_url + '.txt', readonly: true, style: 'width: 70%;' %>
</div>

<%= form_for @google_trusted_store_setting, url: spree.admin_google_trusted_store_setting_path(@google_trusted_store_setting) do |f| %>
  <div class='form-group'>
    <div class='form-group'>
      <%= f.label :account_id, 'Account ID (Not merchant id)' %>
      <%= f.text_field :account_id %>
    </div>
    <div class='form-group'>
      <%= f.label :default_locale %>
      <%= f.text_field :default_locale %>
    </div>
    <div class="form-group">
      <%= f.submit 'Update google trusted store settings' %>
    </div>
  </div>
<% end %>
