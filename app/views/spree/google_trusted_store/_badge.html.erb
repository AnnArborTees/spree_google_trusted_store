<script type="text/javascript">
  var gts = gts || [];

  gts.push(["id", "<%= local_assigns[:id] || '000000' %>"]);
  gts.push(["locale", "<%= local_assigns[:locals] || 'en_US' %>"]);

  // gts.push(["google_base_offer_id", "ITEM_GOOGLE_SHOPPING_ID"]);
